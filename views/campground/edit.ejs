<% layout('/layout/boilerplate.ejs') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" class="mb-3 validated-form" novalidate>
                <div class="mb-2">
                    <label class='form-label' for="title">Title</label>
                    <input class='form-control' type="text" name="campground[title]" id="title"
                        placeholder="Campground Title" value="<%=camp.title%>" required>
                </div>
                <div class="mb-2">
                    <label class='form-label' for="location">Location</label>
                    <input class='form-control' type="text" id="location" name="campground[location]"
                        placeholder="Location" value="<%=camp.location%>" required>
                </div>
                <div class="mb-2">
                    <label class='form-label' for="imageUrl">Image Url</label>
                    <input class='form-control' type="text" id="imageUrl" name="campground[image]"
                        placeholder="Image Url" value='<%=camp.image%>' required>
                </div>
                <div class="mb-2">
                    <label class='form-label' for="description">Description</label>
                    <textarea class='form-control' name="campground[description]" id="description" cols="30"
                        rows="2" required><%=camp.description%></textarea>
                </div class='mb-2'>
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-1">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" id="price" placeholder="0" name="campground[price]"
                        value='<%=camp.price%>' required>
                </div>
                <button class="btn btn-success">Edit Campground</button>
            </form>
            <form action="/campgrounds/<%=camp._id%>" method="GET">
                <button class="btn btn-primary">Go back</button>
            </form>
        </div>
    </div>

