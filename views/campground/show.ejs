<% layout('/layout/boilerplate.ejs') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%=camp.image%>" class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title%>
                    </h5>
                    <p class="card-text">
                        <%=camp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Location:</b>
                        <%=camp.location%>
                    </li>
                    <li class="list-group-item"><b>Price:</b>
                        $<%=camp.price%>
                    </li>
                </ul>
                <div class="card-body d-flex d-column d-nowrap">
                    <form action="/campgrounds/<%=camp._id%>" method="GET">
                        <button class="btn btn-primary">Edit</button>
                    </form>
                    <form action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger mx-3">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>