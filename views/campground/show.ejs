<% layout('/layout/boilerplate.ejs') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%=camp.image%>" class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title%>
                    </h5>
                    <p class="card-text">
                        <%=camp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Location:</b>
                        <%=camp.location%>
                    </li>
                    <li class="list-group-item"><b>Price:</b>
                        $<%=camp.price%>
                    </li>
                </ul>
                <div class="card-body d-flex d-column d-nowrap">
                    <form action="/campgrounds/<%=camp._id%>/edit" method="GET">
                        <button class="btn btn-primary">Edit</button>
                    </form>
                    <form action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger mx-3">Delete</button>
                    </form>
                </div>
            </div>
            <h2>Leave a Review</h2>
            <form class='form-label' action="/campgrounds/<%=camp._id%>/reviews" method='POST' class="mb-3 validated-form" novalidate>
                <div class="'mb-3">
                    <label class='form-label' for="rating">Rating</label>
                    <input class='form-range' type="range" name="review[rating]" id="rating" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label class='form-label' for="body">Review</label>
                    <textarea class='form-control' name="review[body]" id="body" cols="30" rows="3" required></textarea>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>